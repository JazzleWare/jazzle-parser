# EditorConfig  ( http://editorconfig.org/ )

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx}]
indent_style = tab
tab_width = 2

[*.{tern*,json,*rc}]
indent_style = space
indent_width = 2

[*.{md,markdown}]
# 4 spaces indentation for codeblocks
indent_style = space
indent_width = 4
